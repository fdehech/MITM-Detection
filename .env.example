# ========================================
# MITM Detection System - Configuration
# ========================================

# ----------------
# Client Settings
# ----------------
# Proxy connection settings
CLIENT_PROXY_HOST=proxy
CLIENT_PROXY_PORT=9000

# Message settings
CLIENT_MESSAGE_INTERVAL=1.0
CLIENT_MESSAGE_PAYLOAD=HELLO

# ----------------
# Proxy Settings
# ----------------
# Proxy listening settings
PROXY_LISTEN_HOST=0.0.0.0
PROXY_LISTEN_PORT=9000

# Server connection settings
PROXY_SERVER_HOST=server
PROXY_SERVER_PORT=9001

# Attack mode: transparent | modify | replay | delay
PROXY_MODE=delay

# Delay settings (used when PROXY_MODE=delay)
PROXY_DELAY_SECONDS=3

# Buffer size for data transfer
PROXY_BUFFER_SIZE=4096

# ----------------
# Server Settings
# ----------------
# Server listening settings
SERVER_LISTEN_HOST=0.0.0.0
SERVER_LISTEN_PORT=9001

# Detection settings
SERVER_MAX_DELAY=2

# Buffer size for data reception
SERVER_BUFFER_SIZE=4096
